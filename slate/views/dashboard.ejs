        <input type="text" name="query" placeholder="search note">
    </div>
    <h2 class="wp">write plan</h2>
    <div class="newNote">
        <div class="box">
            <a href="/create/<%=username %>"><img src="/assets/plus.png" alt="file dig"></a>
            <a href="/create/<%=username %>" class="h5">Take a note</a>
            <a href="/create/<%=username %>" class="h3">Create a new note</a>
        </div>
    </div>
    <hr class="divider">
    <h2 class="revisit">revisit</h2>
    <!-- trying to get the document length for that user infact how to link user and note user can have many notes every note can have only i user that it belongs to  -->
    <div class="prevNote">
        <% if(notes.length>0){ notes.forEach(function(note){ %>
            <div class="note">
                <div class="top">
                <h3>
                    <%= note.title %>
                </h3>
               <a href="/readmore/<%=username%>/<%= note.title%>"><img src="/assets/readmore.png"></a>
            </div>
                <hr>
                <div class="data">
                    <p>
                        <%= note.data %>
                    </p>
                </div>
            </div>
            <% }); }else{ %>
                <div class="noNote">
                    <h1 class="noNoteHead">No notes as of yet</h1>
                    <a href="/create/<%=username %>" class="noNoteLink">create</a>
                </div>
                <% } %>
    </div>
    <footer>
        <div class="reference">
        <div class="refbox">
            <h2>slate</h2>
        </div>
